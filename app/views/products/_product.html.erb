<tr>
    <td> <%= product.title %> </td>
    <td>
        <% product.ingredients.each do |i| %>
            <div class="small-amount-<%= small_amount?(i.quantity, i.threshold) %>">
                <%= i.name %><br>
            </div>
        <% end %>
    </td>
    <td> <%= number_to_currency(product.price, unit: 'â‚¬ ') %> </td>
    <td class="active-<%= has_only_active_ingredients?(product) %>">
        <%= has_only_active_ingredients?(product) %>
    </td>
    <td> <%= link_to 'Edit', edit_product_path(product) %> </td>
    <td> <%= link_to 'Delete', product, 
        data: { confirm: 'Are you sure?' }, method: :delete %> </td>
</tr>
