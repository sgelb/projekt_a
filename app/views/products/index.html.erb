<% provide(:title, "Our products") %>
<h1>Our products</h1>


<table class="table">
    <thead>
        <tr>
            <th>Product title</th>
            <th>Ingredients</th>
            <th>Price</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |p| %>
            <tr>
                <td> <%= p.title %> </td>
                <td>
                    <% p.ingredients.each do |i| %>
                        <div class="small-amount-<%= small_amount?(i.quantity) %>">
                            <%= i.name %><br>
                        </div>
                    <% end %>
                </td>
                <td> <%= number_to_currency(p.price, unit: 'â‚¬ ') %> </td>
                <td class="active-<%= has_only_active_ingredients?(p) %>">
                    <%= has_only_active_ingredients?(p) %>
                </td>
                <td> <%= link_to 'Edit', edit_product_path(p) %> </td>
                <td> <%= link_to 'Delete', p, 
                    data: { confirm: 'Are you sure?' }, method: :delete %> </td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= button_to 'New product', new_product_path, method: :get %>
