<% if @product.errors.any? %>
  <div>
    <h2><%= pluralize(@product.errors.count, "error") %> </h2>
    <ul> <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@product) do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
