<% provide(:title, "Our ingredients") %>
<h1>Our ingredients</h1>


<table class="table">
  <thead>
    <tr>
        <th>Ingredient name</th>
        <th>Quantity (Threshold)</th>
        <th>Price</th>
        <th>Active</th>
        <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |i| %>
      <tr>
        <td> <%= i.name %> </td>
        <td class="small-amount-<%=small_amount?(i.quantity, i.threshold)%>"> 
          <%= i.quantity %> (<%= i.threshold %>)
        </td>
        <td> <%= number_to_currency(i.price, unit: 'â‚¬ ') %> </td>
        <td class="active-<%=i.active%>"> <%= i.active %> </td>
        <td> <%= link_to 'Edit', edit_ingredient_path(i) %> </td>
        <td> <%= link_to 'Delete', i, 
          data: { confirm: 'Are you sure?' }, method: :delete %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'New ingredient', new_ingredient_path, method: :get %>

