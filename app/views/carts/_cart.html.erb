<h4>Dein Warenkorb</h4>

<% if cart.line_items.empty? %>
    <div>Dein Warenkorb ist leer</div>
<% else %>
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Extras</th>
                <th>Preis</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <%= render(cart.line_items) %>
        </tbody>
        <tr>
            <td>Summe:</td> 
            <td></td>
            <td> <%= number_to_currency(total_price(cart.line_items), unit: '€') %> </td>
            <td> <%= link_to 'Bestellung löschen', cart,
                data: { confirm: 'Sicher?' }, method: :delete %> </td>
        </tr>
    </table>
    
        <%= button_to "Bestellen!", new_order_path, method: :get, class: "btn" %>
<% end %>



