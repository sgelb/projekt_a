        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <%= render(@cart.line_items) %>
        </tbody>
        <tr>
            <td>Total price:</td> 
            <td> <%= number_to_currency(total_price(@cart.line_items), unit: 'â‚¬ ') %> </td>
            <td> <%= link_to 'Delete cart', cart_path,
